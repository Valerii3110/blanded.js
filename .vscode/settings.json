{
  // üåê –ú–æ–≤–∞ —ñ–Ω—Ç–µ—Ä—Ñ–µ–π—Å—É
  "locale": "uk",

  // üé® –¢–µ–º–∞ —Ç–∞ —ñ–∫–æ–Ω–∫–∏
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "vscode-icons",
  "workbench.productIconTheme": "fluent-icons",
  "oneDarkPro.bold": true,
  "oneDarkPro.vivid": true,
  "oneDarkPro.italic": true,

  // üî† –®—Ä–∏—Ñ—Ç —Ç–∞ —á–∏—Ç–∞–±–µ–ª—å–Ω—ñ—Å—Ç—å
  "editor.fontFamily": "'Comic Code', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
  "editor.fontSize": 15,
  "editor.lineHeight": 26,
  "editor.letterSpacing": 0.3,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "editor.renderWhitespace": "selection",
  "editor.renderControlCharacters": true,
  "editor.guides.indentation": true,
  "editor.minimap.enabled": true,
  "editor.minimap.scale": 1.5,
  "editor.minimap.renderCharacters": false,

  // ‚¨ÖÔ∏è –í—ñ–¥—Å—Ç—É–ø–∏
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.autoIndent": "full",

  // üåà –ö–æ–ª—å–æ—Ä–æ–≤—ñ –¥—É–∂–∫–∏ —Ç–∞ –≤–∫–ª–∞–¥–µ–Ω–Ω—è
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": true,
  "editor.matchBrackets": "always",
  "editor.highlightActiveBracketPair": true,

  // üíæ –ó–±–µ—Ä–µ–∂–µ–Ω–Ω—è —Ç–∞ –∞–≤—Ç–æ—Ñ–æ—Ä–º–∞—Ç—É–≤–∞–Ω–Ω—è
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.sortImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.semanticHighlighting.enabled": true,

  // üî§ –§–æ—Ä–º–∞—Ç—É–≤–∞–Ω–Ω—è –¥–ª—è —Ä—ñ–∑–Ω–∏—Ö –º–æ–≤
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingTags": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggest.autoImports": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },

  // ‚ö° Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html",
    "vue": "html",
    "svelte": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.preferences": {
    "css.valueSeparator": ": ",
    "css.propertySeparator": "; "
  },

  // üñ•Ô∏è –¢–µ—Ä–º—ñ–Ω–∞–ª
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "'Cascadia Code', 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.shellIntegration.enabled": true,

  // üîç –ü–æ—à—É–∫
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/build": true
  },
  "search.showLineNumbers": true,
  "search.useGlobalIgnoreFiles": true,
  "search.smartCase": true,
  "search.useIgnoreFiles": true,

  // üß≠ –ù–∞–≤—ñ–≥–∞—Ü—ñ—è
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  "explorer.compactFolders": false,

  // ‚úÖ –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞ –∫–æ–¥—É
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue"
  ],
  "eslint.packageManager": "npm",
  "eslint.run": "onType",
  "eslint.codeActionsOnSave.mode": "all",
  "editor.codeActions.triggerOnFocusChange": false,

  // üìù –ì—Ä–∞–º–∞—Ç–∏–∫–∞
  "cSpell.language": "uk-UA,en",
  "cSpell.enableFiletypes": [
    "javascript",
    "typescript",
    "html",
    "markdown",
    "css",
    "scss"
  ],
  "cSpell.ignorePaths": ["node_modules", "dist", "build"],
  "cSpell.userWords": ["–≤—ñ—Ç–¥–∂–µ–Ω", "–ø—Ä–µ—Ñ—ñ–∫—Å", "—Å—É—Ñ—ñ–∫—Å", "–º—ñ–∫—Ä–æ—Å–µ—Ä–≤—ñ—Å"],

  // üåç –ü–µ—Ä–µ–∫–ª–∞–¥
  "vscodeGoogleTranslate.sourceLanguage": "uk",
  "vscodeGoogleTranslate.targetLanguage": "en",
  "vscodeGoogleTranslate.showStatusBar": true,

  // üîî –ü—ñ–¥—Å–≤—ñ—Ç–∫–∞ –ø–æ–º–∏–ª–æ–∫
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "invalid",
        "settings": {
          "foreground": "#FF5370",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic",
          "foreground": "#5C6370"
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "statusBarItem.errorBackground": "#FF5370",
    "statusBarItem.errorForeground": "#FFFFFF"
  },

  // üß† –ê–≤—Ç–æ–¥–æ–ø–æ–≤–Ω–µ–Ω–Ω—è
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "editor.suggestSelection": "first",
  "editor.suggestOnTriggerCharacters": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.enabled": true,
  "editor.snippetSuggestions": "top",
  "javascript.suggest.autoImports": true,
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.completeFunctionCalls": true,
  "css.validate": true,
  "scss.validate": true,

  // üß© –ö–ª–∞—Å–∏ –≤ HTML/CSS
  "html-css-class-completion.enableEmmetSupport": true,
  "html-css-class-completion.HTMLLanguages": ["html", "vue", "php", "erb"],
  "html-css-class-completion.CSSLanguages": ["css", "scss", "less"],

  // üí¨ CommentsBetter  –∑ —É–∫—Ä–∞—ó–Ω—Å—å–∫–∏–º–∏ —Ç–µ–≥–∞–º–∏
  "better-comments.tags": [
    {
      "tag": "–£–í–ê–ì–ê",
      "color": "#FF2D00",
      "strikethrough": false,
      "bold": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "–ü–û–†–ê–î–ê",
      "color": "#2DDB55",
      "strikethrough": false,
      "italic": true
    },
    {
      "tag": "–ó–ê–í–î–ê–ù–ù–Ø",
      "color": "#FFBC00",
      "strikethrough": false,
      "underline": true
    },
    {
      "tag": "–Ü–ù–§–û",
      "color": "#3794FF",
      "strikethrough": false
    },
    {
      "tag": "–í–ò–ü–†–ê–í–õ–ï–ù–ù–Ø",
      "color": "#FF78F0",
      "strikethrough": false
    }
  ],

  // ‚úÖ TODO Tree: –ø–æ–º—ñ—Ç–∫–∏ TODO/FIXME
  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "NOTE",
    "–ó–ê–í–î–ê–ù–ù–Ø",
    "–£–í–ê–ì–ê",
    "BUG",
    "OPTIMIZE"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "type": "text",
    "foreground": "#ffffff",
    "background": "#ff5370",
    "icon": "check",
    "iconColour": "#FFBC00"
  },
  "todo-tree.highlights.customHighlight": {
    "–ó–ê–í–î–ê–ù–ù–Ø": {
      "icon": "alert",
      "type": "line",
      "background": "#FFBC00",
      "foreground": "#000000"
    },
    "–£–í–ê–ì–ê": {
      "icon": "flame",
      "type": "line",
      "background": "#FF2D00",
      "foreground": "#ffffff"
    },
    "OPTIMIZE": {
      "icon": "zap",
      "type": "line",
      "background": "#6E56CF",
      "foreground": "#ffffff"
    }
  },
  "todo-tree.tree.filterCaseSensitive": false,

  // üîß –ê–≤—Ç–æ–∑–∞–∫—Ä–∏—Ç—Ç—è/–ø–µ—Ä–µ–π–º–µ–Ω—É–≤–∞–Ω–Ω—è —Ç–µ–≥—ñ–≤
  "auto-close-tag.enableAutoCloseSelfClosingTag": true,
  "auto-close-tag.enableAutoCloseTags": true,
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "svelte"
  ],

  // üõ†Ô∏è –î–æ–¥–∞—Ç–∫–æ–≤—ñ –∫–æ—Ä–∏—Å–Ω—ñ –Ω–∞–ª–∞—à—Ç—É–≤–∞–Ω–Ω—è
  "editor.stickyScroll.enabled": true,
  "editor.folding": true,
  "editor.foldingHighlight": true,
  "editor.foldingStrategy": "auto",
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,
  "editor.showFoldingControls": "mouseover",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.dragAndDrop": true,
  "editor.links": true,
  "editor.gotoLocation.multiple": "goto",
  "editor.rulers": [80, 120],

  // üìä Git
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.ignoreMissingGitWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "git.decorations.enabled": true,

  // üì¶ NPM
  "npm.enableScriptExplorer": true,
  "npm.enableRunFromFolder": true,
  "npm.exclude": "**/node_modules/**",

  // üöÄ –î–æ–¥–∞—Ç–∫–æ–≤—ñ —Ä–æ–∑—à–∏—Ä–µ–Ω–Ω—è (—Ä–µ–∫–æ–º–µ–Ω–¥–æ–≤–∞–Ω—ñ)
  "extensions.ignoreRecommendations": false,
  "extensions.autoUpdate": true,
  "extensions.showRecommendationsOnlyOnDemand": false
}
